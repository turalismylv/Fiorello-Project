@using fiorello_project.Areas.Admin.ViewModels.Product
@model ProductDetailsViewModel
<div class="col-lg-12 grid-margin ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Product Details</h4>
            <h3>Photos:</h3>
            <div>
                
                @foreach (var photo in Model.Photos)
                {
                   

                    <span>Order:@photo.Order</span>
                    <td><img  style="width:200px;height:200px; border-radius:50%" src="~/assets/img/@photo.Name" /></td>
                    <br />
                    <br />
                }

            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Price</th>
                            <th>Description</th>
                            <th>Quantitiy</th>
                            <th>Weight</th>
                            <th>Dimenesion</th>
                            <th>Category</th>
                            <th>Status</th>
                            <th>mainPhoto</th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Id</td>
                            <td>@Model.Title</td>
                            <td>@Model.Price</td>
                            <td>@Html.Raw(Model.Description)</td>
                            <td>@Model.Quantity</td>
                            <td>@Model.Weight</td>
                            <td>@Model.Dimenesion</td>
                           <td><select disabled class="form-select" asp-for="CategoryId" asp-items="@Model.Categories"></select> </td> 
                           <td>@Model.Status</td>
                           <td><img src="~/assets/img/@Model.MainPhoto" /></td>
                        </tr>
                    </tbody>
                </table>
                <a asp-action="index" asp-controller="product" class="btn btn-info">Cancel</a>
            </div>
        </div>
    </div>
</div>