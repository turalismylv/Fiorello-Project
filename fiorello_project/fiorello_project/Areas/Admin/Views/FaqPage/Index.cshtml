@using fiorello_project.Areas.Admin.ViewModels.FaqPage
@model FaqPageIndexViewModel
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Categories</h4>
                        <a class="btn btn-primary" asp-action="create" asp-controller="faqpage" asp-area="admin">CREATE FaqPage</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Title</th>
                                        <th>Order</th>
                                        <th>Description</th>
                                        <th>Actions</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var faqPage in Model.FaqPages)
                                    {
                                        <tr>
                                            <td>@faqPage.Id</td>
                                            <td>@faqPage.Title</td>
                                            <td>@faqPage.Order</td>
                                            <td>@faqPage.Description</td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="update" asp-controller="faqpage" asp-area="admin" asp-route-id="@faqPage.Id">Update</a>
                                                 <a class="btn btn-danger" onclick="confirm('Eminsinizmi?')" asp-action="delete" asp-controller="faqpage" asp-area="admin" asp-route-id="@faqPage.Id">Delete</a>
                                                 <a class="btn btn-info" asp-action="details" asp-controller="faqpage" asp-area="admin" asp-route-id="@faqPage.Id">Details</a>
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>