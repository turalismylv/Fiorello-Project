
@using fiorello_project.Areas.Admin.ViewModels.Expert
@model ExpertIndexViewModel
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Categories</h4>
                        <a class="btn btn-primary" asp-action="create" asp-controller="expert" asp-area="admin">CREATE CATEGORY</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>FullName</th>
                                        <th>Position</th>
                                        <th>Photo</th>
                                        <th>Actions</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var expert in Model.Experts)
                                    {
                                        <tr>
                                            <td>@expert.Id</td>
                                            <td>@expert.Name @expert.Surname</td>
                                            <td><img  src="~/assets/img/@expert.PhotoName"/></td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="update" asp-controller="expert" asp-area="admin" asp-route-id="@expert.Id">Update</a>
                                                 <a class="btn btn-danger" onclick="confirm('Eminsinizmi?')" asp-action="delete" asp-controller="expert" asp-area="admin" asp-route-id="@expert.Id">Delete</a>
                                                 <a class="btn btn-info" asp-action="details" asp-controller="expert" asp-area="admin" asp-route-id="@expert.Id">Details</a>
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>